default: &default
  adapter: postgresql
  host: node['db']['address']

development:
  <<: *default
  database: simple_rails_app_development
  password: password


test: &test
  <<: *default
  database: simple_rails_app_test
  min_messages: warning
  password: password

production:
  <<: *default
  database: simple_rails_app_production
  username: node['db']['user']
  password: node['db']['password']
